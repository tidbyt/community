                                    children = get_gametime_column(gameTime, timeColor, leagueAbbr),
                                ),
                            ],
                        ),
                    ],
                )

        return render.Root(
            delay = 2200 if totalInstances == 1 else int(rotationSpeed * 1000),
            show_full_animation = True,
            child = render.Column(
                children = [
                    render.Animation(
                        children = renderCategory,
                    ),
                ],
            ),
        )
    else:
        return []

