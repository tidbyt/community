        fields = [
            schema.Text(
                id = "PlayerID",
                name = "PlayerID",
                desc = "Account ID; Don't include '#'",
                icon = "user",
            ),
            schema.Toggle(
                id = "nameScrollActive",
                name = "Scrolling Name",
                desc = "A toggle to enable scrolling name.",
                icon = "gear",
                default = False,
            ),
            schema.Dropdown(
                id = "pictureChoice",
                name = "Picture Selection",
                desc = "The choice of what picture to display",
                icon = "brush",
                default = picture_Options[0].value,
